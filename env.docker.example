# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=e_hentai_db
DB_USER=ehdb
DB_PASS=your_password_here

# Server Configuration
PORT=8880

# CORS Configuration
CORS=false
CORS_ORIGIN=*

# Proxy Configuration
# ALL_PROXY=socks5://proxy:1080
# HTTPS_PROXY=http://proxy:8080

# Sync host for all sync operations
SYNC_HOST=e-hentai.org

# Incremental Sync
ENABLE_SYNC=false
SYNC_INTERVAL=0 */6 * * *
SYNC_HOURS=0

# Resync recent hours
ENABLE_RESYNC=false
RESYNC_INTERVAL=0 2 * * *
RESYNC_HOURS=24

# Torrent Sync
ENABLE_TORRENT_SYNC=false
TORRENT_SYNC_INTERVAL=0 0 * * *

# Cron expression format: minute hour day month weekday
# Examples:
#   0 */6 * * *  - Every 6 hours
#   0 0 * * *    - Daily at midnight
#   0 */12 * * * - Every 12 hours
